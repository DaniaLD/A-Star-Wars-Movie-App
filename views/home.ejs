<!doctype html>
<html lang="en">
  <head>

    <% include partials/head.ejs %>

  </head>
  <body>
    
    <% include partials/header.ejs %>

    <div id="hero-image">
        <h1 id="hero-title"> <%= title %> </h1>
    </div>

    <div id="posters-wrapper" class="content-padding clearfix">

      <% 
      let moviesLength = movies.length;
      for(let i = 0; i < moviesLength; i++) {
      %>
      <div class="poster">
        <img src="images/<%= movies[i].poster %>" class="img-fluid">
        <div class="poster-info-overlay">
          <h3><%= movies[i].title %></h3>
          <h4 class="view-more">View More <i class="fa fa-arrow-right" aria-hidden="true"></i></h4>
        </div>
      </div>
      <% } %>

    </div>

    <% include partials/scripts.ejs %>

  </body>
</html>